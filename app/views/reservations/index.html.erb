<p id="notice"><%= notice %></p>

<h1>予約済みテニスコート一覧</h1>

<table>
  <thead>
    <tr>
      <th>地域</th>
      <th>レベル</th>
      <th>日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.name %></td>
        <td><%= reservation.level %></td>
        <td><%= reservation.start_time.strftime("%Y-%m-%d %H:%M") %>〜</td>
        <td><%= link_to '詳細＆参加申込', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= month_calendar events: @reservations do |date, reservations| %>
  <%= date %>

  <% reservations.each do |reservation| %>
    <div>
      <%= reservation.start_time.hour %>:<%= reservation.start_time.min %>
      <%= reservation.name %>
    </div>
  <% end %>
<% end %>

<%= link_to 'テニス仲間募集登録', new_reservation_path %>
